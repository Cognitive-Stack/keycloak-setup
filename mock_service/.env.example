# Copy to .env and fill in values

# Keycloak realm issuer URL
KEYCLOAK_ISSUER_URL=http://localhost:8099/realms/myrealm

# Keycloak OIDC client credentials (create a confidential client in Keycloak)
KEYCLOAK_CLIENT_ID=node-api-client
KEYCLOAK_CLIENT_SECRET=CHANGE_ME

# The redirect URI registered in the Keycloak client
REDIRECT_URI=http://localhost:3000/oidc/callback

# Base URL of this mock service (used for logout redirect)
APP_BASE_URL=http://localhost:3000

# Session secret for express-session
SESSION_SECRET=replace-with-a-long-random-string

# Optional: customize scope (default: openid email profile)
OIDC_SCOPE=openid email profile
